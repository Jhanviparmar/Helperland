@model Helperland.Models.ContactU
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="~/css/contactstyle.css">
        <link rel="stylesheet" type="text/css" href="~/css/styles.css">

        <title>Contact | Helperland</title>
        <!-----------------BOOTSTRAP------------------->
        <link rel="stylesheet" type="text/css" href="~/css/mobilemenu.css">
    </head>
    <body>
        <!------------------NAVBAR------------------>
        @Html.Partial("_header")
        @Html.Partial("_login")
        <!------------------BACKGROUNDIMAGE------------>
        <img class="pt-5 image-fluid contacthome" src="~/images/contacthome.png">

        <!------------------CONTACT-US-------------------->
        <section class="contact-us text-center mt-5 mb-5">
            <h3 class="fw-medium">Contact us</h3>
            <div class="d-flex text-center align-items-center justify-content-center pb-3">
                <div class="separator-border me-2"></div>
                <img src="~/images/separator.png">
                <div class="separator-border ms-2"></div>
            </div>
            <div class="container pt-3">
                <div class="row align-items-center g-0">
                    <div class="col-md mb-3">
                        <img class="mb-2" src="~/images/location.png">
                        <p>1111 Lorem ipsum text 100,</p><p> Lorem ipsum AB</p>
                    </div>
                    <div class="col-md mb-3">
                        <img class="mb-2" src="~/images/call.png">
                        <p>+49 (40) 123 56 7890</p>
                        <p>+49 (40) 987 56 0000</p>
                    </div>
                    <div class="col-md">
                        <img class="mb-2" src="~/images/mail.png">
                        <p>info@helperland.com</p>
                    </div>
                </div>
            </div>
        </section>

        <hr class="middle-line">
        <!-------------------GET-IN-TOUCH----------------->
        <div class="mt-5 in-touch ">
            <h3 class="get-in-touch fw-bold text-center mb-4">Get in touch with us</h3>
            @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <form asp-action="Contact" method="post">
                    <div class="row align-items-center justify-content-center g-3 mb-3 mx-md-0 mx-3">
                        <div class="col-md-4">
                            <input type="text" class="form-control name" id="firstName" placeholder="First Name" asp-for="Name" required>
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control name" id="lastName" placeholder="Last Name" asp-for="Name">
                        </div>
                    </div>
                    <div class="row align-items-center justify-content-center g-3 mb-3 mx-md-0 mx-3">
                        <div class="col-md-4">
                            <div class="input-group row">
                                <div class="input-group">
                                    <span class="input-group-text name">+91</span>
                                    <input asp-for="PhoneNumber" type="tel" class="form-control name" id="phone" placeholder="Mobile number" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <input asp-for="Email" type="email" class="name form-control" id="email" placeholder="Email" required />
                        </div>
                    </div>
                    <div class="row align-items-center justify-content-center mb-3 mx-md-0 mx-3">
                        <div class="col-md-8">
                            <select id="inputState" class="form-control select" asp-for="Subject">
                                <option selected>General</option>
                                <option>Inquiry</option>
                                <option>renewal</option>
                                <option>revocation</option>
                            </select>
                        </div>
                    </div>
                    <div class="row align-items-center justify-content-center mb-2 mx-md-0 mx-3">
                        <div class="col-md-8">
                            <textarea asp-for="Message" class="form-control mx-auto msg" placeholder="Message" id="message" required></textarea>
                        </div>
                    </div>
                    <div class="row justify-content-center mb-3 mx-md-0 mx-3">
                        <div class="col-md-8">
                            <label for="file" class="fw-bold">Attachment</label>
                            <label class="upload py-2 px-4 my-2 mx-2">Upload<input type="file" id="file" name="file"></label>
                            <input type="file">
                        </div>
                    </div>
                    <div class="row mb-3 mx-md-0 mx-3">
                        <div class="check-box mb-2 text-center mx-auto col-md-8" style="color: #646464">
                            <label>
                                <input type="checkbox" required>
                                Our current data protection regulations apply . I hereby agree that my data entered in the contact form will be stored electronically and processed and used for the purpose of establishing contact. The consent can be revoked at any time in accordance with Art. 7 Para. 3 GDPR by informal notification (e.g. by e-mail).
                            </label>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button class="submitbtn mt-1 mb-5 px-4 py-2">Submit</button>
                    </div>
                </form>
            }
        </div>
        <!--------------------MAP------------------------>
        <div class=" map pb-5">
            <img class="background-map" src="~/images/map.png">
        </div>
        <!---------------NEWSLETTER--------------------->
        <div class="newsletter justify-content-center mb-5">
            <h6 class="newsletter pb-2 text-center mt-lg-5">GET OUR NEWSLETTER</h6>
            <div class="d-flex justify-content-center gap-2 ">
                <input class="email" type="email" placeholder="YOUR EMAIL">
                <div class="submit">Submit</div>
            </div>
        </div>

        <!-----------------FOOTER------------------------->
        @Html.Partial("_footer")
        <div onclick="topFunction()" id="myBtn" title="Go to top"><img class="scroll ms-5" src="~/images/up.png"></div>

        <script src="~/js/mobilemenu.js"></script>
        <script src="~/js/script.js"></script>
    </body>
</html>
}
