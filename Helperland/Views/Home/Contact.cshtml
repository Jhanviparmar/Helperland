@model Helperland.Models.ContactU
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="~/css/contactstyle.css">
        <link rel="stylesheet" type="text/css" href="~/css/styles.css">

        <title>Contact | Helperland</title>
        <!-----------------BOOTSTRAP------------------->
        <link rel="stylesheet" type="text/css" href="~/css/mobilemenu.css">
    </head>
    <body>
        <!------------------NAVBAR------------------>
        <header>
            <section id="navbar">
                <nav class="navbar navbar-expand-lg navbar-light bg-transparent main-navigation">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                            <img class="pb-2" src="~/images/smallhomelogo.png">
                        </a>
                        <button class="navbar-toggler" type="button">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="overlay d-flex d-lg-none"></div>
                        <div class="d-lg-flex w-100 pb-3 pb-lg-0 sidebar" id="navbarSupportedContent">
                            <ul class="navbar-nav ms-auto pb-3">
                                <li class="blue-btn nav-item text-center ms-xl-2">
                                    <a class="nav-link text-light px-3" aria-current="page" href="#">Book a cleaner</a>
                                </li>
                                <li class="nav-item text-center ms-xl-2 ">
                                    <a class="nav-link text-light px-3" aria-current="page" asp-controller="Home" asp-action="Price">Prices & Services</a>
                                </li>
                                <li class="nav-item text-center ms-xl-2">
                                    <a class="nav-link text-light px-3" aria-current="page" href="#">Warranty</a>
                                </li>
                                <li class="nav-item text-center ms-xl-2">
                                    <a class="nav-link text-light px-3" aria-current="page" href="#">Blog</a>
                                </li>
                                <li class="nav-item text-center active ms-xl-2">
                                    <a class="nav-link text-light px-3" aria-current="page" asp-controller="Home" asp-action="Contact">Contact Us</a>
                                </li>
                                <li class="blue-btn nav-item text-center ms-xl-2 me-2">
                                    <a class=" nav-link text-light px-3" aria-current="page" href="#">Login</a>
                                </li>
                                <li class="blue-btn nav-item text-center ms-xl-2 ">
                                    <a class=" nav-link text-light px-3" aria-current="page" href="service-provider--become-a-provider.html">Become a Helper</a>
                                </li>
                                <li><hr class="dropdown-divider divider d-lg-none" style="color: #646464; height: 2px;"></li>
                                <li class="divider d-lg-none mt-3"><img src="~/images/fb.png" class="mx-5"><img src="~/images/ig.png"></li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </section>
        </header>

        <!------------------BACKGROUNDIMAGE------------>
        <img class="pt-5 image-fluid contacthome" src="~/images/contacthome.png">

        <!------------------CONTACT-US-------------------->
        <section class="contact-us text-center mt-5 mb-5">
            <h3 class="fw-medium">Contact us</h3>
            <div class="d-flex text-center align-items-center justify-content-center pb-3">
                <div class="separator-border me-2"></div>
                <img src="~/images/separator.png">
                <div class="separator-border ms-2"></div>
            </div>
            <div class="container pt-3">
                <div class="row align-items-center g-0">
                    <div class="col-md mb-3">
                        <img class="mb-2" src="~/images/location.png">
                        <p>1111 Lorem ipsum text 100,</p><p> Lorem ipsum AB</p>
                    </div>
                    <div class="col-md mb-3">
                        <img class="mb-2" src="~/images/call.png">
                        <p>+49 (40) 123 56 7890</p>
                        <p>+49 (40) 987 56 0000</p>
                    </div>
                    <div class="col-md">
                        <img class="mb-2" src="~/images/mail.png">
                        <p>info@helperland.com</p>
                    </div>
                </div>
            </div>
        </section>

        <hr class="middle-line">
        <!-------------------GET-IN-TOUCH----------------->
        <div class="mt-5 in-touch ">
            <h3 class="get-in-touch fw-bold text-center mb-4">Get in touch with us</h3>
        @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
        {
            <form asp-action="Contact" method="post" enctype="multipart/form-data">
                <div class="row align-items-center justify-content-center g-3 mb-3 mx-md-0 mx-3">
                    <div class="col-md-4">
                        <input type="text" class="form-control name" id="firstName" placeholder="First Name" asp-for="Name">
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control name" id="lastName" placeholder="Last Name" asp-for="Name">
                    </div>
                </div>
                <div class="row align-items-center justify-content-center g-3 mb-3 mx-md-0 mx-3">
                    <div class="col-md-4">
                        <div class="input-group row name">
                            <div class="input-group">
                                <span class="input-group-text" id="basic-addon1">+91</span>
                                <input asp-for="PhoneNumber" type="tel" class="form-control" id="phone" placeholder="Mobile number">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <input asp-for="Email" type="email" class="name form-control" id="email" placeholder="Email">
                    </div>
                </div>
                <div class="row align-items-center justify-content-center mb-3 mx-md-0 mx-3">
                    <div class="col-md-8">
                        <select id="inputState" class="form-control select" asp-for="Subject">
                            <option selected>General</option>
                            <option>Inquiry</option>
                            <option>renewal</option>
                            <option>revocation</option>
                        </select>
                    </div>
                </div>
                <div class="row align-items-center justify-content-center mb-2 mx-md-0 mx-3">
                    <div class="col-md-8">
                        <textarea asp-for="Message" class="form-control mx-auto msg" placeholder="Message" id="message"></textarea>
                    </div>
                </div>
                <div class="row justify-content-center mb-3 mx-md-0 mx-3">
                    <div class="col-md-8">
                        <label for="file" class="fw-bold">Attachment</label>
                        <label class="upload py-2 px-4 my-2 mx-2">Upload<input type="file"></label>
                        <input type="file">
                    </div>
                    </div>
                    <div class="row mb-3 mx-md-0 mx-3">
                        <div class="check-box mb-2 text-center mx-auto col-md-8" style="color: #646464">
                            <label>
                                <input type="checkbox">
                                Our current data protection regulations apply . I hereby agree that my data entered in the contact form will be stored electronically and processed and used for the purpose of establishing contact. The consent can be revoked at any time in accordance with Art. 7 Para. 3 GDPR by informal notification (e.g. by e-mail).
                            </label>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button class="submitbtn mt-1 mb-5 px-4 py-2">Submit</button>
                    </div>
            </form>
        }
        </div>
        <!--------------------MAP------------------------>
        <div class=" map pb-5">
            <img class="background-map" src="~/images/map.png">
        </div>
        <!---------------NEWSLETTER--------------------->
        <div class="newsletter justify-content-center">
            <h6 class="newsletter pb-2 text-center mt-lg-5">GET OUR NEWSLETTER</h6>
            <div class="d-flex justify-content-center gap-2 ">
                <input class="email" type="email" placeholder="YOUR EMAIL">
                <div class="submit">Submit</div>
            </div>
        </div>

        <!-----------------FOOTER------------------------->
        <section class="footer mt-5">
            <div class="d-flex flex-lg-row flex-column justify-content-between align-items-center">
                <img class="footerlogo mx-lg-5 mt-4 mb-lg-3 ps-lg-3" src="~/images/footerlogo.png">
                <ul class="d-flex flex-lg-row flex-column align-items-center gap-lg-4 mt-lg-3 mt-5 me-4 mb-4">
                    <li class="mb-lg-0 mb-2">
                        <a href="Homepage.html">HOME</a>
                    </li>
                    <li class="mb-lg-0 mb-2">
                        <a asp-controller="Home" asp-action="About">ABOUT</a>
                    </li>
                    <li class="mb-lg-0 mb-2">TESTIMONIALS</li>
                    <li class="mb-lg-0 mb-2">
                        <a asp-controller="Home" asp-action="faqs">FAQS</a>
                    </li>
                    <li class="mb-lg-0 mb-2">INSURANCE POLICY</li>
                    <li>IMPRESSIUM</li>
                </ul>
                <div class="socials mx-lg-5 mt-lg-3 mb-3 mt-4 pe-xl-5">
                    <img class="me-3" src="~/images/fb.png">
                    <img src="~/images/ig.png">
                </div>
            </div>
            <div class="d-flex flex-column text-center align-items-center justify-content-center">
                <div class="footer-line"></div>
                <div class="footer-privacy py-3">©2018 Helperland. All rights reserved.     Terms and Conditions  |  Privacy Policy</div>
            </div>
        </section>
        <div onclick="topFunction()" id="myBtn" title="Go to top"><img class="scroll ms-5" src="~/images/up.png"></div>

        <script src="~/js/mobilemenu.js"></script>
        <script src="~/js/script.js"></script>
    </body>
</html>
}
