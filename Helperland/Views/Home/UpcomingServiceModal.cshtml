@model Helperland.Models.CustomModel
<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="myModalLabel">Service Details</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            @*<button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>*@
        </div>
        <div class="modal-body">
            <div class="d-flex flex-row fw-bold">@Model.ServiceStartDate.ToShortDateString() 12:00-3:00</div>
            <div class="d-flex flex-row"><h6>Duration : </h6><span class="ps-2">@Model.ServiceHours hours</span></div>
            <hr />
            <div class="d-flex flex-row"><h6>Service-ID : </h6>@Model.ServiceId</div>

            @{
                int num = Model.ServiceExtraId;

                String s = num.ToString();


                char[] Arr = s.ToCharArray();

                //foreach (char ch in charArr)
                //{
                //    Console.WriteLine(ch);
                //}

                String ans = "";

                for (int i = 0; i < Arr.Length; i++)
                {

                    if (i == 0)
                    {

                        if (Arr[0] == '1')
                        {
                            ans = ans + " " + "Inside Cabinates,";
                        }
                        else
                        {
                            ans = ans + "";
                        }
                    }
                    else if (i == 1)
                    {

                        if (Arr[1] == '1')
                        {
                            ans = ans + " " + "Inside Fridge,";
                        }
                        else
                        {
                            ans = ans + "";
                        }
                    }
                    else if (i == 2)
                    {

                        if (Arr[2] == '1')
                        {
                            ans = ans + " " + "Inside Oven,";
                        }
                        else
                        {
                            ans = ans + "";
                        }
                    }
                    else if (i == 3)
                    {

                        if (Arr[3] == '1')
                        {
                            ans = ans + " " + "Laundry wash & dry,";
                        }
                        else
                        {
                            ans = ans + "";
                        }
                    }
                    else if (i == 4)
                    {
                        if (Arr[4] == '1')
                        {
                            ans = ans + " " + "Inside Windows.";
                        }
                        else
                        {
                            ans = ans + "";
                        }
                    }
                    else
                    {
                        ans = "No service is selected";
                    }



                }
            }



            <div class="d-flex flex-row"><h6>Extras: </h6><span class="ps-2">@ans</span></div>
            
            <div class="d-flex flex-row"><h6>Total payment : </h6><span class="price fw-bold ps-5">  @Model.SubTotal €</span></div>
            <hr>
            <div class="d-flex flex-row"><h6>Customer Name : </h6><span class="ps-2">@Model.FirstName @Model.LastName</span></div>
            <div class="d-flex flex-row"><h6>Service Address : </h6><span class="ps-2">@Model.AddressLine1 , @Model.AddressLine2 , @Model.City , @Model.PostalCode , @Model.State</span></div>
            @*<div class="d-flex flex-row"><h6>Distance : </h6><span class="ps-2">@Model.Distance</span></div>*@
            <hr>
            <h6>Comments :</h6>
            <span>
                @Model.Comments
            </span>
            <div>
                @if (@Model.HasPets)
                {
                    <div><img src="~/images/green.png" /><span> I have pets at home.</span></div>
                }
                else
                {
                    <div><img src="~/images/redcross.png" /><span> I Don't have pets at home.</span></div>
                }
            </div>
            <button class="Cancel p-2" data-id="@Model.ServiceRequestId" id="CancelServiceid">
                Cancel
            </button>
            <button class="Complete p-2 btn-success" data-id="@Model.ServiceRequestId" id="CompleteService">
                Completed
            </button>
        </div>
    </div>
</div>


