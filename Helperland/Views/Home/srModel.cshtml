@model Helperland.Models.CustomModel
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Service Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex flex-row"><h6>Duration : </h6><span class="ps-2">@Model.ServiceHours hours</span></div>
                <div class="d-flex flex-row"><h6>Service-ID : </h6>@Model.ServiceId</div>

                @{
                    int num = Model.ServiceExtraId;

                    String s = num.ToString();


                    char[] Arr = s.ToCharArray();

                    //foreach (char ch in charArr)
                    //{
                    //    Console.WriteLine(ch);
                    //}

                    String ans = "";

                    for (int i = 0; i < Arr.Length; i++)
                    {

                        if (i == 0)
                        {

                            if (Arr[0] == '1')
                            {
                                ans = ans + " " + "Inside Cabinates,";
                            }
                            else
                            {
                                ans = ans + "";
                            }
                        }
                        else if (i == 1)
                        {
                           
                            if (Arr[1] == '1')
                            {
                                ans = ans + " " + "Inside Fridge,";
                            }
                            else
                            {
                                ans = ans + "";
                            }
                        }
                        else if (i == 2)
                        {
                            
                            if (Arr[2] == '1')
                            {
                                ans = ans + " " + "Inside Oven,";
                            }
                            else
                            {
                                ans = ans + "";
                            }
                        }
                        else if (i == 3)
                        {

                            if (Arr[3] == '1')
                            {
                                ans = ans + " " + "Laundry wash & dry,";
                            }
                            else
                            {
                                ans = ans + "";
                            }
                        }
                        else if (i == 4)
                        {
                            if (Arr[4] == '1')
                            {
                                ans = ans + " " + "Inside Windows.";
                            }
                            else
                            {
                                ans = ans + "";
                            }
                        }
                        else
                        {
                            ans = "No service is selected";
                        }



                    }
                }



                <div class="d-flex flex-row"><h6>Extras: </h6><span class="ps-2">@ans</span></div>

                
                <div class="d-flex flex-row"><h6>Total payment : </h6><span class="price fw-bold ps-5">  @Model.TotalCost €</span></div>
                <hr>
                <div class="d-flex flex-row"><h6>Address : </h6><span class="ps-2">@Model.AddressLine1 , @Model.AddressLine2 , @Model.City , @Model.PostalCode , @Model.State</span></div>
                <div class="d-flex flex-row"><h6>Billing address : </h6><span class="ps-2">Same as address</span></div>
                <div class="d-flex flex-row"><h6>Phone : </h6><span class="ps-2">@Model.Mobile</span></div>
                <div class="d-flex flex-row"><h6>E-Mail : </h6><span class="ps-2">@Model.Email</span></div>

                <hr>
                <h6>Do you want to tell your helper something?</h6>
                <span>
                    @Model.Comments
                </span>
                <div>
                    @if (@Model.HasPets)
                    {
                        <div><img src ="~/images/green.png"/><span> I have pets at home.</span></div>
                    }
                    else
                    {
                        <div><img src="~/images/redcross.png" /><span> I Don't have pets at home.</span></div>
                    }
                </div>
                @if (Model.Status == 0)
                {
                    <button type="button" class="button mt-md-3 mt-2 px-3" data-toggle="modal"
                            data-target="#exampleModal" id="Reschedule" data-dismiss="modal">
                        Reschedule
                    </button>
                    <button type="button" class="button mt-md-3 mt-2 px-3" data-toggle="modal"
                            data-target="#exampleModal1" id="cancel" data-dismiss="modal">
                        Cancel
                    </button>
                }
            </div>
        </div>
    </div>
