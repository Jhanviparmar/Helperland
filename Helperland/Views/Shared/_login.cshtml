@model Helperland.Models.User;
@Html.Raw(ViewBag.SucessMessage)
@Html.Raw(ViewBag.ErrorMessage)
<div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalToggleLabel" style="font-size:24px">Login to your account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form container-fluid text-center mt-3">
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        <form>
                            <div class="mb-2">
                                <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" placeholder="Email id" aria-describedby="emailHelp">
                            </div>
                            <div class="mb-2">
                                <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                            </div>
                            <input class="form-check-input mb-3 check-box" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label me-5 pe-3" for="flexCheckDefault" id="text-checkbox">Remember me</label>
                            <button type="submit" class="login w-100 mb-2">Login</button>
                        </form>
                    }
                    <div>
                        <a class="py-2" data-bs-target="#exampleModalToggle2"
                           data-bs-toggle="modal"
                           data-bs-dismiss="modal">Forgot password?</a>
                    </div>
                    <div class="mx-5">
                        <p>Don't have an account?<span><a asp-controller="Home" asp-action="CreateAccount"> Create an account</a></span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="exampleModalToggle2" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalToggleLabel2">Forget Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form container-fluid text-center mt-3">
                    @using (Html.BeginForm("ForgetPassword", "Home", FormMethod.Post))
                    {
                        <form>
                            <div class="mb-2">
                                <input type="email" asp-for="Email" class="form-control" id="exampleInputPassword2" placeholder="Email id">
                            </div>
                            <button type="submit" class="login mb-2">Send</button>
                        </form>
                    }
                    <a class="py-2" data-bs-target="#exampleModalToggle" data-bs-toggle="modal" data-bs-dismiss="modal"> Login now</a>
                </div>
            </div>
        </div>
    </div>
</div>